@model IEnumerable<TrashCanCollector.Models.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeeklyPickUpDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OneTimePickUp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartSubscriptionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndSubscriptionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdrressStreet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrashPickUpFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdentityUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeeklyPickUpDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OneTimePickUp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartSubscriptionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndSubscriptionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdrressStreet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrashPickUpFee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentityUser.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CustomerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CustomerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CustomerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
